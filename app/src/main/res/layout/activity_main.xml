<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="#ff9800"
        tools:context="com.ancalc.blueeye.andrcalc.MainActivity">

        <LinearLayout
                android:background="@drawable/display_bcg"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:orientation="vertical"
                android:weightSum="2"
                android:padding="4dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#607d8b"
            >
                <TextView
                        android:id="@+id/top_text"
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" "
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textColor="#000000"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="#546e7a"
            >
                <TextView
                        android:id="@+id/botton_text"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:layout_marginRight="10dp"
                />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
            android:layout_marginTop="5dp"
            android:background="#ff9800"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:weightSum="4"
        >
            <Button
                    android:id="@+id/root_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="\u221a"
                    android:textStyle="bold"
                    android:background="#4a148c"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/power_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="^"
                    android:textStyle="bold"
                    android:background="#4a148c"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/pie_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="\u03c0"
                    android:textStyle="bold"
                    android:background="#4a148c"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/fact_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="!"
                    android:textStyle="bold"
                    android:background="#4a148c"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:weightSum="4"
        >
            <Button
                    android:id="@+id/del_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="\u232b"
                    android:textStyle="bold"
                    android:background="#6bffeb"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <Button
                    android:id="@+id/plusmin_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="\u00b1"
                    android:textStyle="bold"
                    android:background="#6bffeb"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <Button
                    android:id="@+id/percge_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:textStyle="bold"
                    android:background="#6bffeb"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <Button
                    android:id="@+id/div_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="\u00f7"
                    android:textStyle="bold"
                    android:background="#6bffeb"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:weightSum="4"
        >
            <Button
                    android:id="@+id/seven_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textStyle="bold"
                    android:background="#76ff03"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <Button
                    android:id="@+id/eight_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textStyle="bold"
                    android:background="#4a148c"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/nine_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textStyle="bold"
                    android:background="#4a148c"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/mul_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="\u00d7"
                    android:textStyle="bold"
                    android:background="#6bffeb"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:weightSum="4"
        >
            <Button
                    android:id="@+id/four_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textStyle="bold"
                    android:background="#76ff03"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <Button
                    android:id="@+id/five_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textStyle="bold"
                    android:background="#ff1744"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/six_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textStyle="bold"
                    android:background="#ff1744"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/minus_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textStyle="bold"
                    android:background="#6bffeb"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:weightSum="4"
        >
            <Button
                    android:id="@+id/one_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textStyle="bold"
                    android:background="#76ff03"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <Button
                    android:id="@+id/two_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textStyle="bold"
                    android:background="#76ff03"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <Button
                    android:id="@+id/three_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textStyle="bold"
                    android:background="#76ff03"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
            <Button
                    android:id="@+id/plus_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textStyle="bold"
                    android:background="#76ff03"
                    android:textSize="20sp"
                    android:textColor="#000000"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:weightSum="4"
        >
            <Button
                    android:id="@+id/dot_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textStyle="bold"
                    android:background="#ff1744"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/zero_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textStyle="bold"
                    android:background="#ff1744"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/clear_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:textStyle="bold"
                    android:background="#ff1744"
                    android:layout_marginRight="1dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
            <Button
                    android:id="@+id/equal_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textStyle="bold"
                    android:background="#ff1744"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
